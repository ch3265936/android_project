<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/r_top"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <include layout="@layout/layout_title"></include>

        <com.hanglinpai.widget.BounceScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/icon_remind"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:text="@string/remind"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="15dp"
                        android:background="@color/driver"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/r_avl"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center|left"
                        android:text="@string/avl"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <com.hanglinpai.widget.RoundedImageView
                        android:id="@+id/avl"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_user_def"
                        app:riv_oval="true" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/icon_enter" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="15dp"
                        android:background="@color/driver"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/red_phone_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="* "
                        android:visibility="gone"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center|left"
                        android:text="@string/phone"
                        android:layout_toRightOf="@id/red_phone_tip"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="249dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@null"
                        android:gravity="center|right"
                        android:maxLength="11"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/driver"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/r_name"
                    android:paddingRight="15dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/red_name_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="* "
                        android:visibility="gone"
                        android:textColor="@color/red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center|left"
                        android:text="@string/name"
                        android:layout_toRightOf="@id/red_name_tip"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="249dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="@string/input_name"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/driver"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/r_sex"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/red_sex_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="* "
                        android:visibility="gone"
                        android:textColor="@color/red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center|left"
                        android:text="@string/sex"
                        android:layout_toRightOf="@id/red_sex_tip"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="249dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="@string/select_sex"
                        android:singleLine="true"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:src="@mipmap/icon_enter" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"

                        android:background="@color/driver"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/r_company"
                    android:paddingRight="15dp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/red_company_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="* "
                        android:visibility="gone"
                        android:textColor="@color/red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center|left"
                        android:text="@string/company"
                        android:layout_toRightOf="@id/red_company_tip"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/company"
                        android:layout_width="249dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="@string/input_company"
                        android:singleLine="true"
                        android:maxLength="30"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/driver"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/r_position"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/red_position_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="* "
                        android:visibility="gone"
                        android:textColor="@color/red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center|left"
                        android:text="@string/position"
                        android:layout_toRightOf="@id/red_position_tip"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/position"
                        android:layout_width="249dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="@string/input_position"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/driver"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/r_email"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/red_email_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="* "
                        android:visibility="gone"
                        android:textColor="@color/red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center|left"
                        android:layout_toRightOf="@id/red_email_tip"
                        android:text="@string/email_tip"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="249dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="@string/input_email"
                        android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM@_."
                        android:singleLine="true"
                        android:textColor="@color/secondColor"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/driver"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_card"
                        android:layout_width="245dp"
                        android:layout_height="135dp"
                        android:layout_centerInParent="true"
                        android:scaleType="center"
                        android:src="@mipmap/icon_card" />

                </RelativeLayout>

                <Button
                    android:id="@+id/submit_reg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_select"
                    android:gravity="center"
                    android:text="@string/reg_submit"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.hanglinpai.widget.BounceScrollView>

    </LinearLayout>


</RelativeLayout>
