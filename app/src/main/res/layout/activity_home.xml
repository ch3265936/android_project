<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50.5dp"
        android:background="@color/transparent" />


    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="4dip"
        android:paddingTop="4dp"
        tools:ignore="UselessParent">

        <RadioButton
            android:id="@+id/home"
            style="@style/main_tab_bottom"
            android:checked="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/bt_menu_home_select"
            android:text="@string/app_name" />


        <ImageView
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="newOrder"
            android:src="@mipmap/icon_fabu" />

        <RadioButton
            android:id="@+id/profile"
            style="@style/main_tab_bottom"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/bt_menu_me_select"
            android:text="@string/profile" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/driver"></View>
</RelativeLayout>
